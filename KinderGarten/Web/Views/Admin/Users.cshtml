@model IEnumerable<Model.User>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>All Users</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.Tel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateC)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.Tel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateC)
        </td>
     
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>

            <button class="btn btn-primary btn-sm" > @Html.ActionLink("Update", "Update", new { id = item.Id }, new { @style = "color:#fff;" })</button>
            <button class="btn btn-danger btn-sm">@Html.ActionLink("Delete","Delete", new { id = item.Id }, new { @style = "color:#fff;" })</button>


          
        </td>
    </tr>
}

</table>
